apiVersion: v1
kind: PersistentVolume
metadata:
  name: unificonfig-pv
spec:
  storageClassName: synomounted
  capacity:
    storage: 500Mi
  accessModes:
    - ReadWriteOnce
  claimRef:
    namespace: default
    name: unificonfig-pvc
  persistentVolumeReclaimPolicy: Retain
  hostPath:
    path: "/media/unifi"